<div class="container mt-4 mb-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4 mt-4">
            <div class="card">
                <a href="/course/{{this.slug}}" class="link">
                    <img class="card-img-top" src="https://img.youtube.com/vi/{{this.videoId}}/sddefault.jpg" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/course/{{this.slug}}" class="link">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
